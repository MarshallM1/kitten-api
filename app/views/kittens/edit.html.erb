<% provide(:title, 'Edit a Kitten') %>

<h1>Update the kitten</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @kitten do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.number_field :age, class: 'form-control', min: 1%>

      <%= f.label :cuteness %>
      <%= f.number_field :cuteness, class: 'form-control', min: 1, max: 10%>

      <%= f.label :softness %>
      <%= f.number_field :softness, class: 'form-control', min: 1, max: 10%>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>